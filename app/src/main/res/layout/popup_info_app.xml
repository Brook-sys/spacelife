<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sobre"
        android:textSize="48sp"
        app:fontFamily="@font/roboto_black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:text="**Este é um aplicativo de compras ficticio, servindo apenas para fins de apresentação."
        android:textSize="30sp"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/roboto_condensed_regular" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:maxLines="2"
        android:text="Aplicativos que podem interessar:"
        android:textSize="36sp"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/open_sans_extra_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/app_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/back_relationed_app"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_app_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_app1" />

            <TextView
                android:id="@+id/text_app_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="Slide Sideways"
                android:textSize="36sp"
                app:autoSizeTextType="uniform"
                app:fontFamily="@font/open_sans_extra_bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/app_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/back_relationed_app"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/image_app_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_app2" />

            <TextView
                android:id="@+id/text_app_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="VidEasy"
                android:textSize="36sp"
                app:autoSizeTextType="uniform"
                app:fontFamily="@font/open_sans_extra_bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>