<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/back_terreno_comprado_bottom"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtviewNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_terreno_comprado_top"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="36sp"
        app:autoSizeTextType="uniform"
        app:fontFamily="@font/open_sans_extra_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtviewTamanho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="36sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="@font/roboto_condensed_regular" />

        <TextView
            android:id="@+id/txtviewPacote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="36sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="@font/roboto_condensed_regular" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtviewTipo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="24sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="@font/open_sans_extra_bold" />

        <TextView
            android:id="@+id/txtviewPreco3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textSize="36sp"
            app:autoSizeTextType="uniform"
            app:fontFamily="@font/open_sans_extra_bold" />
    </LinearLayout>

</LinearLayout>